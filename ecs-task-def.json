{
  "containerDefinitions": [
    {
      "cpu": 256,
      "essential": true,
      "image": "{{ must_env `ECR_REPOSITORY` }}/{{ must_env `ECR_REPOSITORY` }}:{{ must_env `ECR_IMAGE_TAG` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/task-def-ecspresso-demo",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs",
          "max-buffer-size": "25m",
          "mode": "non-blocking"
        }
      },
      "name": "nginx",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 80,
          "hostPort": 80,
          "name": "80",
          "protocol": "tcp"
        }
      ]
    }
  ],
  "cpu": "256",
  "executionRoleArn": "arn:aws:iam::{{ must_env `AWS_ACCOUNT_ID` }}:role/ecsTaskExecutionRole",
  "family": "task-def-ecspresso-demo",
  "ipcMode": "",
  "memory": "512",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "tags": [
    {
      "key": "Name",
      "value": "task-def-ecspresso-demo"
    }
  ],
  "taskRoleArn": "arn:aws:iam::{{ must_env `AWS_ACCOUNT_ID` }}:role/ECSTaskRole"
}
